{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "title": "Australian Domestic Trips Over Time by State and Purpose",
  "data": {
    "url": "https://raw.githubusercontent.com/NabilaCodes/FIT3179-DV-2/main/tourism%20for%20bubble%20plot.csv"
  },
  "params": [
    {
      "name": "Purpose_selection",
      "bind": {
        "input": "select",
        "options": [null, "Business", "Holiday", "Visiting", "Other"],
        "labels": ["Show All", "Business", "Holiday", "Visiting", "Other"],
        "name": "Purpose Selection: "
      }
    },
    {
      "name": "MinTrips",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2000,
        "step": 50,
        "name": "Minimum Trips: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Purpose_selection == null || datum.Purpose == Purpose_selection"
    },
    {
      "filter": "datum.Trips > MinTrips"
    }
  ],
  "encoding": {
    "x": {
      "field": "Quarter",
      "type": "temporal",
      "title": "Quarter",
      "axis": {
        "format": "%Y-%m",
        "labelAngle": -45
      }
    },
    "y": {
      "field": "State",
      "type": "nominal",
      "title": "State",
      "sort": "-x"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "circle",
        "opacity": 0.7
      },
      "encoding": {
        "size": {
          "field": "Trips",
          "type": "quantitative",
          "title": "Number of Trips",
          "scale": {
            "type": "sqrt",
            "range": [10, 1000]
          },
          "legend": {
            "format": ".0f"
          }
        },
        "color": {
          "field": "Purpose",
          "type": "nominal",
          "title": "Purpose",
          "scale": {
            "domain": ["Business", "Holiday", "Visiting", "Other"],
            "range": ["#e41a1c", "#377eb8", "#4daf4a", "#ff7f00"]
          }
        },
        "tooltip": [
          {"field": "Quarter", "type": "temporal", "format": "%Y Q%q", "title": "Quarter"},
          {"field": "Region", "type": "nominal", "title": "Region"},
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Purpose", "type": "nominal", "title": "Purpose"},
          {"field": "Trips", "type": "quantitative", "format": ",.1f", "title": "Trips"}
        ]
      }
    }
  ]
}