{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Number of Trips by State, Quarter, and Purpose of Travel",
  "data": {
    "url": "https://raw.githubusercontent.com/NabilaCodes/FIT3179-DV-2/main/tourism%20for%20bubble%20plot.csv"
  },


  "params": [
    {
      "name": "Trips_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2000000,
        "step": 50000,
        "name": "Minimum Number of Trips: "
      }
    },

    {
      "name": "Purpose_selection",
      "bind": {
        "input": "select",
        "options": [null, "Holiday", "Business", "Visiting", "Other"],
        "labels": ["Show All", "Holiday", "Business", "Visiting", "Other"],
        "name": "Purpose of Travel: "
      }
    }
  ],

  "transform": [
    {
      "filter": "datum['Trips'] > 0"
    },
    { "filter": "datum['Trips'] > Trips_Above" },

    {
      "filter": "Purpose_selection == null || datum['Purpose'] == Purpose_selection"
    }
  ],


  "layer": [
    {
      "mark": "circle",
      "encoding": {

        "x": {
          "field": "Quarter",
          "type": "ordinal",
          "title": "Year / Quarter",
          "axis": {
            "labelAngle": -45,  
            "grid": false 
          }
        },
        "y": {
          "field": "State",
          "type": "nominal",
          "title": "State"
        },

        "size": {
                "field": "Trips",
                "type": "quantitative",
                "scale": {
                    "domain": [0, 300],
                    "range": [20, 500] 
                },
                "legend": {
                    "format": "d",
                    "title": "Number of Trips"
                }
                }
        "color": {
          "field": "Purpose",
          "type": "nominal",
          "scale": {
            "range": [
              "#377eb8",
              "#e41a1c", 
              "#4daf4a", 
              "#984ea3", 
              "#ff7f00"  
            ]
          },
          "title": "Purpose of Travel"
        },
        "opacity": {"value": 0.7},
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Quarter", "type": "ordinal"},
          {"field": "Purpose", "type": "nominal"},
          {"field": "Trips", "type": "quantitative", "format": ","}
        ]
      }
    },

    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -10,
        "fontSize": 11,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "State", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['State'] == 'NSW' || datum['State'] == 'VIC' || datum['State'] == 'QLD'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Quarter", "type": "ordinal"},
          {"field": "Purpose", "type": "nominal"},
          {"field": "Trips", "type": "quantitative", "format": ","}
        ]
      }
    }
  ]
}
