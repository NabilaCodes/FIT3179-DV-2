{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Short-term Visitor Arrivals Normalized by Population",
  "width": 800,
  "height": 500,
  "params": [
    {
      "name": "Year_selection",
      "value": "July 2025",
      "bind": {
        "input": "select",
        "options": ["July 2019", "July 2023", "July 2024", "July 2025"],
        "labels": ["July 2019", "July 2023", "July 2024", "July 2025"],
        "name": "Select Year: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/NabilaCodes/FIT3179-DV-2/refs/heads/main/ne_10m%20(1).json",
    "format": {
      "type": "topojson",
      "feature": "ne_10m_admin_1_states_provinces"
    }
  },
  "projection": {
    "type": "mercator",
    "center": [133, -28],
    "scale": 700
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/NabilaCodes/FIT3179-DV-2/refs/heads/main/Choropleth%20dataset.csv"
        },
        "key": "State or territory of stay",
        "fields": ["July 2019", "July 2023", "July 2024", "July 2025"]
      }
    },
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/NabilaCodes/FIT3179-DV-2/refs/heads/main/Population%20dataset%20for%20normalisation.csv"
        },
        "key": "State or territory of stay",
        "fields": ["2019", "2023", "2024", "2025"]
      }
    },
    {
      "calculate": "Year_selection == 'July 2019' ? datum['July 2019'] : Year_selection == 'July 2023' ? datum['July 2023'] : Year_selection == 'July 2024' ? datum['July 2024'] : datum['July 2025']",
      "as": "Visitor Arrivals"
    },
    {
      "calculate": "Year_selection == 'July 2019' ? datum['2019'] : Year_selection == 'July 2023' ? datum['2023'] : Year_selection == 'July 2024' ? datum['2024'] : datum['2025']",
      "as": "Population"
    },
    {
      "calculate": "datum['Visitor Arrivals'] / datum['Population'] * 1000",
      "as": "Visitors per 1000 Residents"
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 1
  },
  "encoding": {
    "color": {
      "field": "Visitors per 1000 Residents",
      "type": "quantitative",
      "scale": {
        "scheme": "tealblues",
        "type": "linear"
      },
      "legend": {
        "title": "Visitors per 1,000 Residents",
        "format": ".1f"
      }
    },
    "tooltip": [
      {
        "field": "properties.name",
        "type": "nominal",
        "title": "State/Territory"
      },
      {
        "field": "Visitor Arrivals",
        "type": "quantitative",
        "title": "Visitors",
        "format": ","
      },
      {
        "field": "Population",
        "type": "quantitative",
        "title": "Population",
        "format": ","
      },
      {
        "field": "Visitors per 1000 Residents",
        "type": "quantitative",
        "title": "Visitors per 1,000 Residents",
        "format": ".1f"
      }
    ]
  },
  "description": "AI Declaration: In writing this code, I have taken the help of Copilot AI by providing it with the base code for choropleth maps from the Studio examples."
}
