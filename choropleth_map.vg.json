{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Short-term Visitor Arrivals by State/Territory",
  "width": 800,
  "height": 600,
  "params": [
    {
      "name": "Year_selection",
      "value": "July 2025",
      "bind": {
        "input": "select",
        "options": ["July 2019", "July 2023", "July 2024", "July 2025"],
        "labels": ["July 2019", "July 2023", "July 2024", "July 2025"],
        "name": "Select Year: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/NabilaCodes/FIT3179-DV-2/refs/heads/main/ne_10m%20(1).json",
    "format": {
      "type": "topojson",
      "feature": "ne_10m_admin_1_states_provinces"
    }
  },
  "projection": {
    "type": "mercator",
    "center": [133, -28],
    "scale": 700
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/NabilaCodes/FIT3179-DV-2/refs/heads/main/Choropleth%20dataset.csv"
        },
        "key": "State or territory of stay",
        "fields": ["July 2019", "July 2023", "July 2024", "July 2025"]
      }
    },
    {
      "fold": ["July 2019", "July 2023", "July 2024", "July 2025"],
      "as": ["Year", "Visitors"]
    },
    {
      "filter": "datum.Year == Year_selection"
    },
    {
      "calculate": "toNumber(replace(datum.Visitors, ',', ''))",
      "as": "Visitor Arrivals"
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 1
  },
  "encoding": {
    "color": {
      "field": "Visitor Arrivals",
      "type": "quantitative",
      "scale": {
        "scheme": "blues",
        "type": "linear"
      },
      "legend": {
        "title": "Number of Visitors",
        "format": ","
      }
    },
    "tooltip": [
      {
        "field": "properties.name",
        "type": "nominal",
        "title": "State/Territory"
      },
      {
        "field": "Visitor Arrivals",
        "type": "quantitative",
        "title": "Visitors",
        "format": ","
      }
    ]
  }
}