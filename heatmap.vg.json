{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,

  "data": {
    "url": "https://raw.githubusercontent.com/NabilaCodes/FIT3179-DV-2/refs/heads/main/arrivals_cleaned.csv",
    "format": { "type": "csv" }
  },

  "title": {
    "text": "Overseas Visitor Arrivals to Australia Over Time",
    "font": "Segoe UI",
    "fontSize": 20,
    "fontWeight": "normal",
    "color": "#00334d"
  },

  "config": {
    "view": { "strokeWidth": 0 },
    "axis": {
      "domain": true,
      "labelFont": "Segoe UI",
      "titleFont": "Segoe UI",
      "labelFontSize": 12,
      "titleFontSize": 13,
      "labelColor": "#00334d",
      "titleColor": "#00334d"
    },
    "legend": {
      "labelFont": "Segoe UI",
      "titleFont": "Segoe UI",
      "labelFontSize": 12,
      "titleFontSize": 13,
      "labelColor": "#00334d",
      "titleColor": "#00334d",
      "format": ","
    }
  },

  "layer": [
    {
      "mark": "rect",
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "title": "Year",
          "axis": { "labelAngle": 0 }
        },
        "y": {
          "field": "month",
          "type": "ordinal",
          "title": "Month",
          "sort": [
            "January","February","March","April","May","June",
            "July","August","September","October","November","December"
          ]
        },
        "color": {
          "field": "arrivals",
          "type": "quantitative",
          "scale": { "scheme": "tealblues", "type": "linear" },
          "legend": { "title": "Arrivals", "format": ",.0f" }
        },
        "tooltip": [
          { "field": "year", "title": "Year" },
          { "field": "month", "title": "Month" },
          { "field": "arrivals", "type": "quantitative", "title": "Arrivals", "format": ",.0f" }
        ]
      }
    },

    {
      "data": {
        "values": [
          {
            "year": "2020",
            "month": "July",
            "note": "â†“ Sharp drop during COVID-19 travel restrictions"
          }
        ]
      },
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dx": 70,
        "dy": -5,
        "fontSize": 13,
        "fontStyle": "italic",
        "color": "#444"
      },
      "encoding": {
        "x": { "field": "year", "type": "ordinal" },
        "y": {
          "field": "month",
          "type": "ordinal",
          "sort": [
            "January","February","March","April","May","June",
            "July","August","September","October","November","December"
          ]
        },
        "text": { "field": "note" }
      }
    }
  ],

  "description": "AI Declaration"
}
