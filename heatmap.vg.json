{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/NabilaCodes/FIT3179-DV-2/refs/heads/main/arrivals_cleaned.csv"
  },
  "title": "Short-Term Visitor Arrivals to Australia",
  "config": {
    "view": {
      "strokeWidth": 0,
      "step": 50
    },
    "axis": {
      "domain": false
    }
  },
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "month",
      "type": "ordinal",
      "title": "Month",
      "sort": [
        "January", "February", "March", "April", "May", "June",
        "July", "August", "September", "October", "November", "December"
      ]
    },
    "color": {
      "field": "arrivals",
      "type": "quantitative",
      "legend": {
        "title": "Arrivals ('000)"
      }
    }
  }
}
