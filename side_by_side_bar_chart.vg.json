{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Side-by-side bar chart comparing Domestic and International consumption over years.",
  "data": {
    "url": "https://raw.githubusercontent.com/NabilaCodes/FIT3179-DV-2/refs/heads/main/Tourism%20consumption%20in%20purchasers'%20prices%20over%20time.csv"
  },
  "transform": [
    {
      "fold": [
        "Domestic consumption ($b)",
        "International consumption ($b)"
      ],
      "as": ["Type", "Consumption"]
    }
  ],
  "width": 800,
  "height": 500,
  "title": {
    "text": "Domestic vs International Tourism Consumption",
    "font": "Segoe UI",
    "fontSize": 20,
    "fontWeight": "normal",
    "color": "#00334d"
  },
  "mark": {
    "type": "bar",
    "cornerRadiusTopLeft": 4,
    "cornerRadiusTopRight": 4
  },
  "encoding": {
    "x": {
      "field": "Financial year",
      "type": "ordinal",
      "axis": { "title": "Financial Year", "labelAngle": 0 }
    },
    "y": {
      "field": "Consumption",
      "type": "quantitative",
      "axis": { "title": "Consumption ($ billions)" }
    },
    "color": {
      "field": "Type",
      "type": "nominal",
      "title": "Consumption Type",
      "scale": {
        "domain": ["Domestic consumption ($b)", "International consumption ($b)"],
        "range": ["#b39ddb", "#a5d6a7"]
      }
    },
    "xOffset": { "field": "Type" }
  },
  "config": {
    "view": { "stroke": "transparent" },
    "axis": {
      "labelFont": "Segoe UI",
      "titleFont": "Segoe UI",
      "labelFontSize": 12,
      "titleFontSize": 14,
      "labelColor": "#00334d",
      "titleColor": "#00334d"
    },
    "legend": {
      "labelFont": "Segoe UI",
      "titleFont": "Segoe UI",
      "labelFontSize": 12,
      "titleFontSize": 13,
      "labelColor": "#00334d",
      "titleColor": "#00334d"
    }
  },
  "description": "AI Declaration: In writing this code, I have taken the help of ChatGPT by providing it with the base code for bar charts from the Studio examples."
}
