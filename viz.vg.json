{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Tourism GDP vs Whole Economy GDP by Year",
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/NabilaCodes/FIT3179-DV-2/refs/heads/main/Tourism%20GDP%20by%20year.csv"
  },
  "transform": [
    {"fold": ["Tourism ($b)", "Whole economy ($b)"], "as": ["Category", "Value"]}
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {"title": "Financial Year"},
      "sort": [
        "2016-17","2017-18","2018-19",
        "2019-20","2020-21","2021-22",
        "2022-23","2023-24"
      ]
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "axis": {"title": "GDP ($ billion)"}
    },
    "color": {
      "field": "Category",
      "type": "nominal",
      "title": "GDP Type",
      "scale": {"range": ["#1f77b4", "#ff7f0e"]}
    },
    "xOffset": {"field": "Category"},
    "tooltip": [
      {"field": "Year", "type": "ordinal"},
      {"field": "Category", "type": "nominal"},
      {"field": "Value", "type": "quantitative", "format": ".2f"}
    ]
  },
  "config": {
    "axis": {"labelFontSize": 12, "titleFontSize": 12},
    "legend": {"labelFontSize": 12, "titleFontSize": 12}
  }
}
